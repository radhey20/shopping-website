
	<p class="textHeading">Register</p>
	<%= form_for @user do |f| %>
		<% if @user.errors.any? %>
			<div class="textErrorHeading">
				<% for message in @user.errors.full_messages %>
					<%= message %> <br />
				<% end %>
			</div>	
		<% end %>
    <div class="textSimpleHeading">
			<p>
				<%=f.label :user_name %>
				<%= f.text_field :user_name %>
			</p>
			<p>
				<%=f.label :email %>
				<%= f.email_field :email %>
			</p>

			<p>
				<%= f.label :password %> 
				<%=f.password_field :password%>
			</p>

			<p>
				<%= f.label "confirm password" %>
				<%= f.password_field :password_confirmation %>
			</p>
			<p>
				<%=f.label :user_address %>
				<%= f.text_field :user_address %>
			</p>
			<p>
				<%=f.label :user_city %>
				<%= f.text_field :user_city %>
			</p>
			<p>
				<%=f.label :user_zip %>
				<%= f.text_field :user_zip %>
			</p>
			<p>
				<%=f.label :user_province %>
				<%= f.text_field :user_province %>
			</p>
			<p>
				<%=f.label :user_country %>
				<%= f.text_field :user_country %>
			</p>

			<p class="button">
				<%= f.submit %>
			</p>
		<% end %> 
   </div>







