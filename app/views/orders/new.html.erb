
<div class="box">
	<p class ="textHeading">Your Order</p>
	<br />
	<p class="textSimpleHeading">Your Total Is: <%= number_to_currency(current_cart.total_price) %></p>
	<p class="textSimpleHeading">Please Enter Your Details:</p>
	<% if current_user == nil %>
		<%= form_for(@order) do |f| %>
		  <% if @order.errors.any? %>
		  	<br />
		  	<h2 class="textSimpleHeading"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
		  	<ul>
				<% @order.errors.full_messages.each do |msg| %>
					<li class="textSimpleHeading"><%= msg %></li>
				<% end %>
			</ul>
		<% end %>
		<br /><br />
		<div class="textOrderHeading">
			<%= f.label :name %>
			<%= f.text_field :name, size: 40 %>
			<br />

			<%= f.label :email %>
			<%= f.email_field :email, size: 40%>
			<br />

			<%= f.label :country %>
			<%= f.text_field :country, size: 40 %>

			<br />

			<%= f.label :address %>
			<%= f.text_field :address, size: 40 %>

			<br />

			<%= f.label :city %>
			<%= f.text_field :city, size: 40 %>

			<br />

			<%= f.label :state %>
			<%= f.text_field :state, size: 40 %>

			<br />

			<%= f.label :zip %>
			<%= f.text_field :zip, size: 40 %>

			<br />

			<%= f.label :card_number %>
			<%= f.text_field :card_number, size: 40 %>

			<br />

			<%= f.label :cvc %>
			<%= f.text_field :cvc, size: 40 %>

			<br />

			<%= f.label :expiry_Date %>
			<%= f.date_select :expiry_Date %>

			<br /><br /><br />

			<%= f.submit 'Place Order' %>
			<%= f.submit 'Cancel Order' %>
		</div>
	    <% end %>
	<% else %>
		<%= render 'formByCurrentUser' %>
	<% end %>	
</div>

