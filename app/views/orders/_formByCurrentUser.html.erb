	<br />

	<%= f.label :zip %>
	<%= f.text_field :zip, size: 40, :value => current_user.user_zip %>


    <br />
	<%= f.label "card number" %>
	<%= f.text_field :card_number, size: 40 %>

    <br />
	<%= f.label :cvc %>
