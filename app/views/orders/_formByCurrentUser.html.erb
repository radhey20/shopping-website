	<%= f.label :country %>
	<%= f.text_field :country, size: 40, :value => current_user.user_country %>

	<br />

	<%= f.label :address %>
	<%= f.text_field :address, size: 40, :value => current_user.user_address %>

	<br />
	<%= f.label :city %>
	<%= f.text_field :city, size: 40, :value => current_user.user_city %>

	<br />
	<%= f.label :state %>
